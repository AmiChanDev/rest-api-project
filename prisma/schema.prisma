datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model City {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  age    Int?
  cityId Int
  city   City    @relation(fields: [cityId], references: [id])
  orders Order[]
}

model Order {
  id            Int          @id @default(autoincrement())
  price         Float
  userId        Int
  orderStatusId Int
  user          User         @relation(fields: [userId], references: [id])
  orderStatus   OrderStatus  @relation(fields: [orderStatusId], references: [id])
}

model OrderStatus {
  id     Int     @id @default(autoincrement())
  name   String
  orders Order[]
}
